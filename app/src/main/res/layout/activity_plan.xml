<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plan">

    <!-- Goals Header -->
    <TextView
        android:id="@+id/tv_goals_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mục tiêu"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Goals List -->
    <LinearLayout
        android:id="@+id/ll_goals"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goals_header"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <!-- Sample Goal Item -->
        <TextView
            android:id="@+id/tv_goal_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua điện thoại - 1.000.000"
            android:padding="16dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- More goal items can be added here -->
    </LinearLayout>

</RelativeLayout>