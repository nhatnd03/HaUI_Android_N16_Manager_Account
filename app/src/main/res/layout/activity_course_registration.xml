<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseRegistration">

    <!-- Courses List -->
    <LinearLayout
        android:id="@+id/ll_courses"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <!-- Sample Course Item -->
        <TextView
            android:id="@+id/tv_course_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sit excepteur recusandae quibusdam! - 1.000.000"
            android:padding="16dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- More course items can be added here -->
    </LinearLayout>

    <!-- Register Button -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_courses"
        android:layout_marginTop="16dp" />

</RelativeLayout>