<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistical">

    <!-- Circular Chart -->
    <ImageView
        android:id="@+id/iv_chart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_setting" />

    <!-- Sample Statistic Item -->
    <LinearLayout
        android:id="@+id/ll_statistics"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_chart"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <!-- Sample Statistic Item -->
        <TextView
            android:id="@+id/tv_statistic_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sit excepteur recusandae quibusdam! - 1.000.000"
            android:padding="16dp"
            android:background="@drawable/icon_password"
            android:layout_marginBottom="8dp" />

        <!-- More statistic items can be added here -->
    </LinearLayout>

</RelativeLayout>